{% extends 'base.html.twig' %}

{% block title %}Új kiadó{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-6 offset-md-3">

        <h1 class="mt-5 mb-5">Új kiadó rögzítése</h1>

        <form name="kiado" method="POST">

            <input type="hidden" id="kiado__token" name="kiado[_token]" value="{{ csrf_token('uj kiado') }}"/>

            <div class="row mb-3">
                <label for="kiado_nev" class="col-sm-3 col-form-label">Kiadó neve:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="kiado_nev" name="kiado[nev]">
                </div>
            </div>

            <div class="text-center mt-5">
                <button type="submit" class="btn btn-success me-4">Mentés</button>
                <a class="btn btn-primary" href="{{ path('app_lemez_new') }}">Vissza</a>
            </div>

        </form>
    </div>
</div>

{% endblock %}
